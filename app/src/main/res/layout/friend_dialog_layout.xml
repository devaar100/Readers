<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@color/appColor"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/edit_img"
                android:src="@drawable/download"
                app:civ_border_width="5dp"
                app:civ_border_color="@color/appColor"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp" />
            <ImageView
                android:padding="10dp"
                android:src="@drawable/back"
                android:id="@+id/back"
                android:layout_alignParentStart="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:padding="15dp"
                android:src="@drawable/plus"
                android:id="@+id/add"
                android:layout_alignParentEnd="true"
                android:layout_width="45dp"
                android:layout_height="45dp" />
        </RelativeLayout>
        <LinearLayout
            android:padding="5dp"
            android:background="@android:color/white"
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_margin="0dp"
                    android:text="Thrill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/star"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv1"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_margin="0dp"
                    android:text="9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_margin="0dp"
                    android:text="Horror"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/star"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv2"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_margin="0dp"
                    android:text="9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_margin="0dp"
                    android:text="Romance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/star"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv3"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_margin="0dp"
                    android:text="9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_margin="0dp"
                    android:text="Mystery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/star"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv4"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_margin="0dp"
                    android:text="9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_margin="0dp"
                    android:text="Fantasy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/star"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv5"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_margin="0dp"
                    android:text="9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_margin="0dp"
                    android:text="Fiction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/star"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv6"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_margin="0dp"
                    android:text="9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/dialogName"
            android:text="Name"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dialogPlace"
            android:text="City, Country"
            android:textColor="@android:color/black"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dialogDesc"
            android:hint="Your space"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="10dp"
                    android:background="@color/colorPrimary"
                    android:id="@+id/fb_edit"
                    android:src="@drawable/facebook"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:padding="10dp"
                    android:background="@android:color/holo_red_dark"
                    android:id="@+id/g_edit"
                    android:src="@drawable/google"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:padding="10dp"
                    android:background="@android:color/holo_blue_light"
                    android:id="@+id/t_edit"
                    android:src="@drawable/twitter"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:padding="10dp"
                    android:background="@android:color/holo_red_light"
                    android:id="@+id/q_edit"
                    android:src="@drawable/quora"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>
</ScrollView>